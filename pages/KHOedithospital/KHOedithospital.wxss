/* pages/MZeditHospitalInfo/MZeditHospitalInfo.wxss */
.lf{
  float: left;
}
.rt{
  float: right;
}
.hospitalName{
  margin: 60rpx auto 0 30rpx;
  padding-bottom: 20rpx;
  font-size: 26rpx;
  color: #333;
  border-bottom: 1rpx solid #e5e5e5;
}
.hospitalNameWrt{
  margin:10rpx 30rpx 30rpx 30rpx;
  font-size: 28rpx;
  color: #000;
}
.hospitalIntro{
  font-size: 26rpx;
  color: #000;
  margin-left: 30rpx;
  display: inline-block;
  width: 720rpx;
  border-bottom: 1rpx solid #e5e5e5;
  padding-bottom: 20rpx;
}
.paragraphOne,.paragraphTwo,.paragraphThree,.paragraphFour,.paragraphFive{
  padding: 10rpx 30rpx 10rpx 0;
  height: 220rpx;
  width: 690rpx;
  font-size: 28rpx;
  color: #000;
  margin-left: 30rpx;
  /* padding-right: 30rpx; */
  border-bottom: 1rpx solid #e5e5e5;
  line-height: 40rpx;
}
.addPicTitle{
  font-size: 26rpx;
  color: #333;
  margin: 40rpx 0 0 30rpx;
  padding-bottom: 20rpx;
  width: 720rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

/*添加图片  */
.addPic text{
   line-height: normal; 
   font-size: 28rpx;
   color: #ccc;
   display: block;
   margin-left: 30rpx;
   
}
.addPic image{
  width: 210rpx;
  height: 210rpx;
  margin:60rpx 20rpx 24rpx 30rpx;
}
.addAddress{
  
  width: 720rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
  padding-bottom: 20rpx;
  margin-top: 60rpx;
}

.link{
  height: 100rpx;
  width: 690rpx;
  padding-right: 30rpx;
  margin-left: 30rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.linkAddress{
  margin-bottom: 160rpx;
}
.btn{
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 120rpx;
  border-top: 1rpx solid #e5e5e5;
  /* margin-top: 200rpx; */
  background: #fff;
}
.btn button{
  height: 90rpx;
  margin: 15rpx 30rpx;
  border: 0;
  background:#32afff;
  color: #fff;
  font-size: 32rpx;
  line-height: 90rpx;
}