swiper {
  width: 100%;
  height: 100%;
  box-shadow:2px 8px 16px 0px #e5e5e5;
}

swiper-item image {
  width: 686rpx;
  height: 360rpx;
  border-radius: 8rpx;
}

.swiper-container {
  /* position: relative; */
  
  position: absolute;
  /* top: 130rpx; */
  left: 32rpx;
  width: 686rpx;
  height: 360rpx;
  z-index: 999;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 5rpx;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: rgb(238,238,238);
  transition: all 0.6s;
}

.swiper-container .dots .dot.active {
  width: 14rpx;
  background: rgb(43,119,239);
}

