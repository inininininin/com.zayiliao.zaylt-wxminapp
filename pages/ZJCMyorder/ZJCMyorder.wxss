/* pages/ZJCMyorder/ZJCMyorder.wxss */
@import '../common/common.wxss';

page {
  background: #f5f5f5;
}
swiper{
  height: auto;
}
.container {
  background: #fff;
  /* position: fixed; */
}
.topline {
  position: fixed;
  height: 132rpx;
  width: 100%;
  background: #fff;
  top: 0;
  left: 0;
  /* margin: 24rpx 0; */
  /* position: fixed; */
}

.topline text {
  display: inline-block;
  width: 250rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  color: rgb(48, 48, 48);
}

.topline text.on {
  color: rgb(0, 183, 238);
  border-bottom: 4rpx solid rgb(0, 183, 238);
}

.line1 ,.line2{
  height: 149rpx;
  width: 750rpx;
  background: #fff;
  margin-bottom: 24rpx;
}

.line1>image{
  width: 53rpx;
  height: 70rpx;
  float: left;
  margin: 40rpx 20rpx 40rpx 32rpx;
}

.line1>.line1Mid,.line2>.line1Mid {
  width: 490rpx;
  float: left;
}
.line1>.line1Mid view,.line2>.line1Mid view {
  font-size: 30rpx;
  color: rgb(51, 51, 51);
  /* display: inline-block; */
  width: 100%;
  margin: 40rpx 0 14rpx;
  line-height: 30rpx;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  height: 30rpx;
  word-break:break-all;
}


.line1>.line1Mid text:first-child,.line2>.line1Mid text:first-child {
  font-size: 30rpx;
  color: rgb(51, 51, 51);
  /* display: inline-block; */
  width: 100%;
  margin: 40rpx 0 14rpx;
  line-height: 30rpx;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  height: 30rpx;
}

.line1>.line1Mid text:last-child,.line2>.line1Mid text:last-child {
  font-size: 26rpx;
  color: rgb(153, 153, 153);
  /* display: inline-block; */
  width: 100%;
  line-height: 26rpx;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.line1 .line1Det,.line2 .line1Det{
  width: 155rpx;
  float: right;
  line-height: 149rpx;
  color: rgb(0,183,238);
  font-size: 28rpx;
  text-align: center;
}
.line1 .line1Det image,.line2 .line1Det image{
  width: 16rpx;
  height: 26rpx;
  margin-right: 32rpx;
  float: right;
  margin-top: 61.5rpx;
  /* margin-left: 32rpx; */
}

.list{
  width: 100%;
  height: auto;
}
.finishLine{
  width: 100%;
  background: #fff;
  height: 234rpx;
  margin-bottom: 24rpx;
}
.line2{
  width: 718rpx;
  margin-left: 32rpx;
  border-bottom: 1rpx solid #e5e5e5;
  margin-bottom: 0;
}
.line2>image {
  width: 53rpx;
  height: 70rpx;
  float: left;
  margin: 40rpx 20rpx 40rpx 0;
}
