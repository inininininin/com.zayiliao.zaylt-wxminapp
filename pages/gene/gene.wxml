<view class='tabulate' style='margin-bottom:100rpx;paddint-bottom:100rpx'>
  <navigator  wx:for='{{schemeList}}' url='../out/geneDetail/geneDetail?geneTestSamplePackId={{item.geneTestSamplePackId}}'>
    <view class='outpatient'>
      <view class='outLine1'>
        <image  mode="aspectFill"  class='hosimg' src='../img/small-logo@2x.png'></image>
        <text class='hosname'>{{item.hospital||''}}</text>
        <view wx:if='{{item.status==1||item.status==2}}'>
          <image  mode="aspectFill"  src='../img/wait@2x.png'></image>
          <text style='color:rgb(30,202,198)'>未出报告</text>
        </view>
        <view wx:if='{{item.status==3}}'>
          <image  mode="aspectFill"  src='../img/yes@2x.png'></image>
          <text style='color:rgb(255,149,27)'>已出报告</text>
        </view>
        <view wx:if='{{item.status==0}}'>
          <image  mode="aspectFill"  src='../img/no@2x.png'></image>
          <text style='color:rgb(43,119,239)'>未采样本</text>
        </view>
      </view>
      <view class='outLine2'>
        <view class='line1' wx:if='{{item.status!=0}}'>
          <view>编号：{{item.no||''}}</view>
          <view>姓名：{{item.sampleRealname||''}}</view>
        </view>
        <view class='line2' wx:if='{{item.status==0}}'>
          <view>编号：{{item.no||''}}</view>
        </view>
      </view>
    </view>
  </navigator>
</view>

<view class='tabbarBtn'>
  <view bindtap='index'>
    <image  mode="aspectFill"  class='bottomBthimg1' src='../img/shouye@2x.png'></image>
    <text>首页</text>
  </view>
  <view bindtap='clinic'>
    <image  mode="aspectFill"  class='bottomBthimg2' src='../img/Hospital@2x.png'></image>
    <text>门诊</text>
  </view>
  <view bindtap='gene'>
    <image  mode="aspectFill"  class='bottomBthimg2' src='../img/jiyin-blue@2x.png'></image>
    <text  class='active'>基因</text>
  </view>
  <view  bindtap='mine'>
    <image  mode="aspectFill"  class='bottomBthimg3' src='../img/wode@2x.png'></image>
    <text >我的</text>
  </view>
</view>