<view class="doctor"  wx:if="{{totalCount!=0}}">
  <view class="title">
    <text></text>科室医生</view>
  <scroll-view class="doctorList" scroll-x="true" style=" white-space: nowrap; display: flex">
    <view class="doctorItem" bindtap="lookDoctor" data-id='{{item.itemId}}' wx:for='{{items}}'>
      <view style='background:url({{item.headimg}}) no-repeat;background-size:cover;background-position: center;'>
        <!-- <image  mode="aspectFill"   src="{{item.headimg}}"></image> -->
      </view>
      <view>
        <text>{{item.name}}</text>
        <!-- 主任医师 -->
      </view>
      <text>{{item.hosptialName}}</text>

      <text class="doctorText"></text>
    </view>


  </scroll-view>
</view>
<view wx:if="{{detail.content}}">
  <view class="line"></view>
  <view class="bgC">
    <view class="title">
      <text></text>科室简介</view>
    <view class="content">
      {{detail.content||''}}
      
    </view>
   <view style="width:686rpx;margin:0 32rpx">
    <image mode="aspectFill" bindtap="previewImage" wx:for='{{imgList}}' data-src="{{item}}" mode="aspectFill"
        src="{{item}}"></image>
   </view>
  </view>
</view>
<view wx:if="{{detail.shiYingZheng}}">
  <view class="line"></view>
  <view class="bgC">
    <view class="title">
      <text></text>适应症状</view>
    <view class="content">
      <text wx:for='{{shiYingZheng}}'>{{item}}</text>
    </view>
  </view>
</view>
<view wx:if="{{detail.zhenLiaoJiShu}}">
  <view class="line"></view>
  <view class="bgC">
    <view class="title">
      <text></text>诊疗技术</view>
    <view class="content">{{detail.zhenLiaoJiShu||''}}</view>
  </view>
</view>
<view wx:if="{{detail.teSe}}">
  <view class="line"></view>
  <view class="bgC">
    <view class="title">
      <text></text>诊疗特色</view>
    <view class="content">{{detail.teSe||''}}</view>
  </view>
</view>
<view wx:if="{{detail.youShi}}">
  <view class="line"></view>
  <view class="bgC">
    <view class="title">
      <text></text>科室优势</view>
    <view class="content">{{detail.youShi||''}}</view>
  </view>
</view>
<view wx:if="{{detail.contentBtId}}">
  <view class="line"></view>
  <view class="bgC">
    <view class="title">
      <text></text>科室内容</view>
    <import src="../../wxParse/wxParse.wxml" />
    <view class="content">
      <view class='detail'>
        <view class="wxParse" style='font-size:{{fontSize}}rpx !important'>
          <template is="wxParse" data="{{wxParseData:article.nodes}}" />
          <!-- <view>{{wxParseData:article.nodes}}</view> -->
        </view>
      </view>

    </view>
  </view>
</view>

<view wx:if='{{showIs}}' class="page-section page-section-spacing swiper">
  <swiper indicator-dots="{{indicatorDots}}" current='{{current}}' autoplay="{{autoplay}}" interval="{{interval}}"
    duration="{{duration}}">
    <block wx:for="{{items}}" wx:key="*this">
      <swiper-item>
        <view class="swiper-item {{item}}">
          <image mode="aspectFill" class="book" src="../img/Bookmark@2x.png"></image>

          <image mode="aspectFill" class="avator" src="{{item.headimg}}"></image>
          <view class="hosTitle">
            <text>{{item.name||''}}</text>
            <text>{{item.jobTitles||''}}</text>
          </view>
          <view class="hosName">{{item.hosptialName||''}}</view>
          <text class="hosIntro">{{item.intro||''}}</text>
        </view>
        <image mode="aspectFill" class="close" bindtap="closeSwiper" src="../img/close2.png"></image>
      </swiper-item>
    </block>
  </swiper>
</view>