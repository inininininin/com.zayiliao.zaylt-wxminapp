/* pages/specialOffice/specialOffice.wxss */
@import '../common/common.wxss';

page {
  background: #fff;
}

.doctor {
  width: 100%;
  height: auto;
  background: #fff;
}

.title {
  font-size: 32rpx;
  color: rgb(51, 51, 51);
  height: 32rpx;
  display: inline-block;
  margin: 36rpx 0 36rpx 10rpx;
  vertical-align: middle;
  line-height: 32rpx;
  font-weight: 400;
}

.title>text {
  display: block;
  height: 20rpx;
  border-left: 6rpx solid rgb(43, 119, 219);
  font-size: 30rpx;
  margin: 6rpx 10rpx 0 36rpx;
  float: left;
}

.doctorList {
  width: 750rpx;
  max-height: 430rpx;
  overflow-x: scroll;
}

.doctorList view {
  width: 320rpx;
  display: inline-block;
}

.doctorText {
  display: inline-block;
  height: 220rpx;
  /* margin: 16rpx 0; */
  width: 2rpx;
  background: rgb(238, 238, 238);
  position: absolute;
  right: 0;
  top: 16rpx;
}

.doctorList .doctorItem:last-child .doctorText {
  display: none;
}

.doctorItem {
  width: 320rpx;
  position: relative;
  /* border-right: 1rpx solid rgb(238,238,238); *//* height: 320rpx; */
}
.doctorItem>view:nth-child(1){
  width: 180rpx !important;
  height: 180rpx !important;
  border-radius: 90rpx !important;
   margin: 0 auto;
   display: block;
}
.doctorItem>image {
  
  /* width: 180rpx;
  height: 180rpx; */
  /* margin: 0 auto;
  display: block;
  border-radius: 50%; */
  
}

.doctorItem>view:nth-child(2) {
  font-size: 28rpx;
  color: rgb(51, 51, 51);
  text-align: center;
  margin-top: 24rpx;
  line-height: 28rpx;
  height: 28rpx;
}

.doctorItem>view:nth-child(2) text {
  font-size: 28rpx;
  color: rgb(68, 68, 68);
  margin-right: 12rpx;
}

.doctorItem>text {
  font-size: 24rpx;
  color: rgb(51, 51, 51);
  text-align: center;
  margin-top: 12rpx;
  display: block;
  margin-bottom: 50rpx;
}

.bgC {
  width: 100%;
  height: auto;
  background: #fff;
  /* margin: 20rpx 0 0; */
  padding-bottom: 36rpx;
}

.content {
  width: 678rpx;
  margin: 0 36rpx;
  font-size: 26rpx;
  color: rgb(102, 102, 102);
  line-height: 36rpx;
}

.content>text {
  display: inline-block;
  padding: 0 30rpx;
  /* height: 62rpx; */
  line-height: 62rpx;
  background: rgba(255, 249, 242, 1);
  color: #ff951b;
  border-radius: 31rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.content>image{
  width: 300rpx  !important;
  height: 300rpx !important;
  margin: 0  39rpx 39rpx 0;
}

.line {
  width: 100%;
  height: 20rpx;
  background: #f2f2f2;
}

.page-section {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

swiper {
  width: 100%;
  height: 980rpx;
  margin-top: 200rpx;
  /* background: rgba(0,0,0,0.1); */
  position: relative;
}

swiper-item>view {
  width: 686rpx;
  height: 780rpx;
  margin: 0 32rpx;
  border-radius: 15rpx;
  background: #fff;
  margin-top: 10rpx;
  /* position: relative; */
}

swiper-item>view .book {
  width: 62rpx;
  height: 66rpx;
  position: absolute;
  right: 45rpx;
  top: 0rpx;
}

swiper-item .close {
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  left: 330rpx;
  bottom: 0;
}

.avator {
  width: 180rpx;
  height: 180rpx;
  margin: 54rpx 253rpx 24rpx;
  border-radius: 90rpx;
}

.hosTitle, .hosName, .hosIntro {
  width: 566rpx;
  margin: 0 60rpx;
  text-align: center;
  display: block;
}

.hosTitle>text:nth-child(1) {
  font-size: 28rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(68, 68, 68, 1);
  line-height: 28rpx;
  margin-right: 12rpx;
}

.hosTitle>text:nth-child(2) {
  font-size: 28rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
  margin-right: 12rpx;
}

.hosName {
  height: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 24rpx;
  margin-top: 12rpx;
}

.hosIntro {
  text-align: left;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 37rpx;
  /* display: -webkit-box;
  -webkit-line-clamp: 8;
  -webkit-box-orient: vertical;
  overflow: hidden; */
  margin-top: 46rpx;
  height: auto;
  max-height: 290rpx;
  overflow-y: scroll;
}
