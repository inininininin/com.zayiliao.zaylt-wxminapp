/* pages/frameworkIntro/frameworkIntro.wxss */
page{
  background: #fff;

}
.containers {
  box-sizing: border-box;
  /* height: 100%; */
  background: #fff;
  position: relative;
}

.header {
  position: fixed;
  top: 0;
  width: 100%;
  /* color: #333; *//* background: #fff; */
  background: #fff;
  z-index: 888;
  border-bottom: 1rpx solid #e5e5e5;
}

.status-bar {
  /* background: rgba(255, 0, 0, 0.1); */
}

.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title-bar>view{
  width: 100%;
}
.header .image {
  /* float: left; */
   position: absolute;
  width: 24rpx;
  height: 40rpx;
  z-index: 999;
}
.header text{
  width: 100%;
  text-align: center;
  display: inline-block;
}
.detail{
  width: 678rpx;
  padding: 36rpx;
}
.detail>view:nth-child(1){
  color: rgb(51,51,51);
  font-size: 30rpx;
}
.detail>view:nth-child(1) text{
  color:rgb(43,119,239);
}
.detail>view:nth-child(2){
  margin: 30rpx 0;
  font-size: 30rpx;
  color: rgb(51,51,51);
  line-height: 40rpx;
}
.detail>view{
  width: 100%;
  height: auto;
}
.detail>view  image,.detail>view  video{
  width: 100%;
}