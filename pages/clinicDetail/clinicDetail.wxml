<view class="container" style="padding-top:{{statusBarHeight+titleBarHeight}}px">
  <view class="header">
    <view class="status-bar" style="height:{{statusBarHeight}}px"></view>
    <view class="title-bar" style="height:{{titleBarHeight}}px">
      <view>
        <image  mode="aspectFill"  class="image" bindtap='backHistory' style='display:inline-block;top:{{statusBarHeight}}px;left:10rpx;' src='../img/backArrow.png'></image>
        <view class="save">
          <!-- <text>保存</text> -->
          <image  mode="aspectFill"  bindtap="edit" src="../img/Preview.png"></image>
        </view>
        <text class="text">{{navtitle}}</text>
      </view>
    </view>
  </view>
</view>
<view>
  <!-- <text class="time">2019-02-19 12:29</text> -->

  <view class="containers">
    <view class='progress_box'>
      <canvas class="progress_bg" canvas-id="canvasProgressbg"> </canvas>
      <canvas class="progress_canvas" canvas-id="canvasProgress"> </canvas>
      <view class="progress_text">
        <!-- <view class="progress_dot"></view> -->
        <text class='progress_info'> {{totalCount}}</text>
      </view>
    </view>
    <view class="jzwjz">
      <view>
        <text></text>
        <text>未就诊：{{totalCount2}}</text>
      </view>
      <view>
        <text></text>
        <text>已就诊：{{totalCount1}}</text>
      </view>
    </view>
  </view>
</view>
<view class="byList" >
  <text>病员列表</text>

  <!-- 下拉框 -->
  <view class='select_box'>
    <view class='select' catchtap='selectTaps'>
      <text class='select_text'>{{selectDatas[indexs]}}</text>
      <!-- <image  mode="aspectFill"  class='words_img' src='../../images/sanjiao.png'></image> -->
      <image  mode="aspectFill"  class='select_img {{shows&&"select_img_rotate"}}' src='../img/material-icon@2x.png'></image>
    </view>
    <view class='option_box' style='height:{{shows?(selectDatas.length>5?300:selectDatas.length*70):0}}rpx;'>
      <text class='option' style='{{indexs==selectDatas.length-1&&"border:0;"}}' wx:for='{{selectDatas}}' wx:key='this' data-index='{{index}}' catchtap='optionTaps'>{{item}}</text>
    </view>
  </view>
</view>
<view>
   <view class='indexbox' wx:for='{{list1}}' >
      <navigator url='{{item.status==4?"../editPatient/editPatient?id=":"../out/seeAdoctor/seeAdoctor?id="}}{{item.itemId}}'>
        <view class="box">
            <image  mode="aspectFill"  wx:if='{{item.status==1}}' src="../img/orange@2x.png"></image>
            <image  mode="aspectFill"  wx:if='{{item.status==4}}' src="../img/blue@2x.png"></image>
            <view>
              <view>{{item.realname}}<image  mode="aspectFill"  wx:if='{{item.status==1}}' src="../img/red-up@2x.png" style="margin-left:10rpx;"></image></view>
              <text>推送：{{item.pushTime}}</text>
              <text>所属门诊：{{item.clinicName}}</text>
            </view>
            <view  wx:if='{{item.status==1}}'  data-id="{{item.itemId}}" catchtap="makesure" style="z-index:999"   class="makesure">确认就诊</view>
            <view  wx:if='{{item.status==4}}'  class="nosure">已就诊</view>
        </view>
      </navigator>
    </view>
  <view class="withoutNum" wx:if='{{clinicNumber==0}}'>
    <image  mode="aspectFill"  src="../img/wushuju.png"></image>
    <text>暂无数据</text>
  </view>
</view>