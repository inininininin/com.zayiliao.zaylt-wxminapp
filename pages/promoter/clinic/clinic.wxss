.titleText{
  font-size: 36rpx;
}
.search input{
  width: 360rpx;
  color: #000;
}
.search{
  display: inline-block;
  width: 400rpx !important;
  /* padding-left: 30rpx; */
  margin-left: 32rpx;
  height: 60rpx  !important;
  background: rgba(0,0,0,0.05);
  border-radius: 60rpx;
  font-size:30rpx;
  color: rgb(153,153,153);
  text-align: left !important;
  padding-left:80rpx;
}

.title-bar view{
  height: 100%;
  width: 100%;
  text-align: center;
  display: flex;
   /* justify-content: space-between; */
    align-items: center;
}
.title-bar view text{
  display: inline-block;text-align: center;
  width: 100%;
  margin: 0 !important;
  font-size:36rpx;
font-family:PingFangSC-Medium,PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
}

.connectClinic{
  width: 100%;
  height:38rpx;
  font-size: 38rpx;
  line-height: 38rpx;
  margin: 68rpx 0 58rpx 0;
}
.connectClinic>text{
  float: left;
  margin-left: 36rpx;
  font-weight: 600;
}
.connectClinic>view>text{
  float: right;
  margin-right: 10rpx;
  font-size: 32rpx;
  line-height: 38rpx;
}
.connectClinic>view>image{
  width: 38rpx;
  height: 38rpx;
  float: right;
  margin-right: 36rpx;
}
.clinicList{
  width: 700rpx;
  margin: 0 25rpx 100rpx;
  height: auto;
}
.clinicList>view{
  width: 340rpx;
  height: 220rpx;
  display: inline-block;
  margin: 0 5rpx 12rpx;
  text-align: center;
  border-radius: 5rpx;
  /* float: left; */
}
.clinicList>view .name{
  font-size: 32rpx;
  line-height: 32rpx;
  margin-top: 18rpx;
  display: block;
  color: rgba(51,51,51,1);
   display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    height: 32rpx;
}
.clinicList>view .clinicPromoterName{
  font-size: 28rpx;
  line-height: 28rpx;
  margin-top: 18rpx;
  display: block;
  color: rgb(153,153,153);
}
.clinicList>view .pushCount{
  font-size: 28rpx;
  line-height: 50rpx;
  width: 170rpx;
  height: 50rpx;
  border-radius: 50rpx;
  border: 1rpx solid rgb(255,149,27);
  color: rgb(255,149,27);
  text-align: center;
  margin-top: 18rpx;
  display: block;margin-left: 85rpx;
}
.hoverClass{
  background: rgb(255,248,243)
}

.tabbarBtn{
  height: 100rpx;
  width: 100%;
  border-top: 1rpx solid #e5e5e5;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 3;
  background: #fff;
}
.tabbarBtn>view{
  width: 250rpx;
  display: inline-block;
  font-size: 20rpx;
  text-align: center;
  line-height: 20rpx;
}
.tabbarBtn>view>image{
  width: 42rpx;
  height: 44rpx;
  margin-top: 14rpx;
  margin-bottom: 6rpx;
}
.tabbarBtn>view>text{
  display: block;
  color: rgb(153,153,153)
}
.tabbarBtn>view>.active{
  color: rgb(43,119,239)
}
.withoutNum{
  width: 700rpx !important;
  text-align: center;
}
.withoutNum image{
  width: 169rpx;
  height: 165rpx;
  margin: 150rpx 265rpx 20rpx;
}
.withoutNum text{
  width: 700rpx !important;
  display: block;
  font-size:30rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(51,51,51,1) !important;
}