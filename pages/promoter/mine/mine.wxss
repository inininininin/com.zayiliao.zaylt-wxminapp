/* pages/promoter/mine/mine.wxss */
page {
  height: 100%;
  background: #f2f2f2;
}
.container {
  box-sizing: border-box;
  /* height: 100%; */
  background: #fff;
}
.header {
  position: fixed;
  top: 0;
  width: 100%;
  /* color: #fff; */
  /* background: #fff; */
  background: #fff;
}
.status-bar {
  /* background: rgba(255, 0, 0, 0.1); */
}
.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header image {
  /* float: left; */
  position: absolute;
  width: 24rpx;
  height: 40rpx;
}
.title-bar view{
  height: 100%;
  width: 100%;
  text-align: center;
  display: flex;
   /* justify-content: space-between; */
    align-items: center;
}
.title-bar view text{
  display: inline-block;text-align: center;
  width: 100%;
  margin: 0 !important;
  font-size:36rpx;
font-family:PingFangSC-Medium,PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
}
.titleText{
  font-size: 36rpx;
}


.tabbarBtn{
  height: 100rpx;
  width: 100%;
  border-top: 1rpx solid #e5e5e5;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 3;
  background: #fff;
}
.tabbarBtn>view{
  width: 250rpx;
  display: inline-block;
  font-size: 20rpx;
  text-align: center;
  line-height: 20rpx;
}
.tabbarBtn>view>image{
  width: 42rpx;
  height: 44rpx;
  margin-top: 14rpx;
  margin-bottom: 6rpx;
}
.tabbarBtn>view>text{
  display: block;
  color: rgb(153,153,153)
}
.tabbarBtn>view>.active{
  color: rgb(43,119,239)
}


.list{
  margin-top: 24rpx;
  width: 100%;
  height: auto;
  background: #fff;
}
.list navigator>view{
  width: 714rpx;
  margin: 0 auto 0 36rpx;
  border-bottom: 1rpx solid #e5e5e5;
  height: 104rpx;
}
.list navigator>view text{
  font-size: 34rpx;
  color: rgba(51,51,51,1);
  line-height: 104rpx;
}
.list navigator>view image{
  float: right;
  margin-right: 36rpx;
  width:16rpx !important;
  height:26rpx !important;
  margin-top: 39rpx;
}


