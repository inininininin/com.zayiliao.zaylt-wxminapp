@import '../../common/common.wxss';
page{
  background: #F2F2F2;
}

.bottomBth{
  height: 100rpx;
  width:750rpx;
  position: fixed !important;
  bottom: 0;
  left: 0;
  background: #fff !important;
  z-index: 10000;
  border-top: 1px solid #e5e5e5;
}
.bottomBth navigator{
    width: 250rpx;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
  color: #9c9c9c;
}
.bottomBth view{
  width: 250rpx;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
  color: #9c9c9c;
}
.selectBtn{
  color: #2a79f0 !important;
}
.bottomBth view>.bottomBthimg1{
  width: 42rpx;
  height: 44rpx;
  display: block;
  margin: 10rpx 104rpx 0;
}
.bottomBth view>.bottomBthimg2{
  width: 46rpx;
  height: 44rpx;
  display: block;
  margin: 10rpx 104rpx 0;
}
.bottomBth view>.bottomBthimg3{
  width: 44rpx;
  height: 44rpx;
  display: block;
  margin: 10rpx 104rpx 0;
}

.topline{
  background: #fff !important;
  height: 214rpx;
  width: 100%;
}
.topline>image{
  width: 150rpx;
  height: 150rpx;
  float: left;
  margin: 32rpx 40rpx 32rpx 56rpx;
}
.topline>view{
  float: left;
}
.topline>view>text:first-child{
  font-size: 42rpx;
  color: rgb(51,51,51);
  display: block;
  margin-top: 68rpx;
  margin-bottom: 20rpx;
  line-height: 42rpx;
  height: 42rpx;
  float: left;
  width: 100%;
}
.topline>view>text:nth-child(2){
  font-size: 24rpx;
  color: rgb(102,102,102);
  line-height: 24rpx;
  height: 24rpx;
  float: left;
  width: 100%;
}
.line{
  width: 100%;
  height: 104rpx;
  background: #fff;
  font-size: 34rpx;
  line-height: 104rpx;
  color: rgb(51,51,51);
  margin-top: 24rpx;
}
.line text{
  margin-left: 36rpx;
}
.line image{
  float: right;
  width: 13rpx;
  height: 24rpx;
  margin: 40rpx 36rpx;
}