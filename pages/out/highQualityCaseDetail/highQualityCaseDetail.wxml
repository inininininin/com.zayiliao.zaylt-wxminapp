<!--pages/out/newsDetail/newsDetail.wxml-->
<import src="../../../wxParse/wxParse.wxml" />
<view class="shareImg">
	<image class="shareImg1" style="width:750rpx;height:350rpx;" src="{{list.cover}}" mode='aspectFill' data-type="image" data-url="{{list.cover}}"></image>
	<text class='title shareImg1' data-type="text" data-text="{{list.title}}">{{list.title}}</text>
	<view class='hospitalName'>
		<image class="shareImg1" data-type="image" data-url='../../img/logo@2x.png' mode="aspectFill" src='{{cover||"../../img/logo@2x.png"}}'></image>
		<view class="">
			<text class="shareImg1"  data-type="text" data-text="{{list.hosptialName}}">{{list.hosptialName}}</text>
			<text class="shareImg1" data-type="text" data-text="{{list.addTime}}">{{list.addTime}}</text>
		</view>
	</view>
	<view class="readShare">
		<text class="shareImg1"  data-type="text" data-text="浏览量：{{list.viewCount+1||1}}">浏览量：{{list.viewCount+1||1}}</text>
		<text class="shareImg1"   data-type="text" data-text="分享数：{{list.shareCount||0}}">分享数：{{list.shareCount||0}}</text>
	</view>
	<view class='detail ' style='font-size:{{fontSize}}rpx !important'>
		<view class="wxParse ">
			<template is="wxParse" data="{{wxParseData:article.nodes}}" />
		</view>
	</view>
</view>
<view style="width:100%;height:100rpx;opacity:0"></view>
<view class='popwindow' style='display:{{close}}'>
	<view>
		<view>
			<view class='title'>请选择分享平台</view>
			<view class='shareteam'>
				<button open-type='share'>
					<image mode="aspectFill" bindtap='sharewx' class='wx' src='../../img/weixin@2x.png'></image>
					<text>分享到微信</text>
				</button>
<!-- sharepyqIf -->
				<button bindtap='sharepyqIf'>
					<image mode="aspectFill" class='pyq' src='../../img/pengyouquan@2x.png'></image>
					<text>分享到朋友圈</text>
				</button>
			</view>
		</view>
		<view bindtap='close'>取消</view>
	</view>
</view>
