/* pages/Third/index/index.wxss */
.container {
  box-sizing: border-box;
  /* height: 100%; */
  background: #fff;
  position: fixed;
  top: 0;
}
.indexTopBg{
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 392rpx;
  background: url('https://zaylt.njshangka.com/ylt/resource/img/bg.png');
  /* background: url('https://zaylt.njshangka.com/ylt/resource/img/bjs.png'); */
  background-size: 100% 100%;
}
.header {
  position: fixed;
  top: 0;
  width: 100%;
  color: #fff;
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
  /* background: #fff; */
  z-index: 999
}
.status-bar {
  /* background: rgba(255, 0, 0, 0.1); */
}
.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header image {
position: absolute;
  width: 24rpx;
  height: 40rpx;
}
.title-bar view{
  height: 100%;
  width: 100%;
  text-align: center;
  display: flex;
   /* justify-content: space-between; */
    align-items: center;
}
.title-bar view text{
  display: inline-block;text-align: center;
  width:100%;
  margin: 0 !important;
}
.point{
  z-index: 1;
  text-align: center;
  position: relative;
  width: 750rpx;
  height: 262rpx;
}

.point>text{
  font-size: 80rpx;
  color: #fff;
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
}
.point navigator view {
  position: absolute;
  bottom: 50rpx;
}
.point navigator view text:first-child{
  margin-left: 105rpx !important;
}
.point navigator{
  display: inline-block;
   width: 220rpx !important;
  height: 58rpx;
   border-radius: 58rpx;
  border: 2rpx solid #fff;
  font-size: 32rpx;
  color: #fff;
  line-height: 58rpx;
  margin: 0 50rpx 0 50rpx;
}
.point navigator view text{
  width: 220rpx !important;
  height: 58rpx;
  border-radius: 58rpx;
  border: 2rpx solid #fff;
  font-size: 32rpx;
  color: #fff;
  line-height: 58rpx;
  margin: 0 50rpx 0 50rpx;
  display: inline-block;
}
page {
  padding: 0;
  margin: 0;
  width: 100%;
  /* height:100%; */
  background: #f2f2f2;
  /* padding-bottom: 120rpx !Important; */
}
.luckdogList{
  width: 750rpx;
  background: #fff;
  height: 86rpx;
  overflow: hidden;
  line-height: 86rpx;
  font-size: 32rpx;
  color: rgb(51,51,51);
  
}
.luckdog image{
  width: 33rpx;
  height: 30rpx;
  float: left;
  margin: 28rpx 16rpx 28rpx 32rpx;
}
.luckdog text text{
  color: rgb(255,149,27);
}
.popularExchange{
  margin-top: 10rpx;
  width: 100%;
  background: #fff;
}
.hottitle{
  font-size: 32rpx;
  color: rgb(51,51,51);
  line-height: 86rpx;
  height: 86rpx;
}
.hottitle>navigator{
  float: right;
}
.hottitle text:first-child{
  margin-left: 32rpx;
}
.hottitle image{
  width:16rpx;
height:26rpx;
float: right;
margin: 30rpx 32rpx 30rpx 12rpx;
}
.hottitle .more{
  float: right;
}
.goodsList{
  padding: 0 0 50rpx 0;
  width: 708rpx;
  margin: 0 21rpx;
}
.goodsList>navigator{
   height: 424rpx;
  width: 334rpx;
   text-align: center;
  /* float: left; */
  display: inline-block;
  margin: 0 10rpx 20rpx;
}
.good{
  height: 424rpx;
  width: 334rpx;
  
  text-align: center;
  /* float: left; */
  display: inline-block;
}
.good .goodimg{
  width: 334rpx;
  height: 228rpx;
  vertical-align: bottom;
}
.good>view:nth-child(2){
  border-left: 1rpx solid #e5e5e5;
  border-right: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}
.good>view>text:first-child{
  height:32rpx;
  display: block;
  font-size: 32rpx;
  color: rgb(51,51,51);
  line-height: 32rpx;
  padding-top: 20rpx;
  margin: 0 auto 20rpx;
  display:-webkit-box;
-webkit-line-clamp:1;
-webkit-box-orient:vertical;
overflow:hidden;
}
.good view view{
  display: block;
  font-size: 24rpx;
  color: rgb(102,102,102);
  line-height: 24rpx;
  height: 24rpx;
}
.good view view text:first-child{
  display: inline-block;
   font-size: 24rpx !important;
  color: rgb(255,149,27) !important;
  line-height: 24rpx;
  height: 24rpx;
  margin: 0 !Important;
}
.good view text:nth-child(3){
  display: block;
  width: 140rpx;
  height: 42rpx;
  border-radius: 21rpx;
  border: 1rpx solid rgb(43,119,239);
  font-size: 24rpx;
  color: rgb(43,119,239);
  text-align: center;
  margin: 28rpx auto;
}