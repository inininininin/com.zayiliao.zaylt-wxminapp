/* pages/Third/index/index.wxss */
@import '../../common/common.wxss';
page {
  padding: 0;
  margin: 0;
  width: 100%;
  /* height:100%; */
  background: #f2f2f2;
  padding-bottom: 120rpx !Important;
}
.luckdogList{
  width: 750rpx;
  background: #fff;
  height: 86rpx;
  overflow: hidden;
  line-height: 86rpx;
  font-size: 32rpx;
  color: rgb(51,51,51);
}
.luckdog image{
  width: 33rpx;
  height: 30rpx;
  float: left;
  margin: 28rpx 16rpx 28rpx 32rpx;
}
.luckdog text text{
  color: rgb(255,149,27);
}
.popularExchange{
  margin-top: 10rpx;
  width: 100%;
  background: #fff;
}
.hottitle{
  font-size: 32rpx;
  color: rgb(51,51,51);
  line-height: 86rpx;
  height: 86rpx;
}
.hottitle text:first-child{
  margin-left: 32rpx;
}
.hottitle image{
  width:16rpx;
height:26rpx;
float: right;
margin: 30rpx 32rpx 30rpx 12rpx;
}
.hottitle .more{
  float: right;
}
.goodsList{
  padding: 0;
  width: 708rpx;
  margin: 0 21rpx;
}
.goodsList>navigator{
   height: 424rpx;
  width: 334rpx;
   text-align: center;
  /* float: left; */
  display: inline-block;
  margin: 0 10rpx 20rpx;
}
.good{
  height: 424rpx;
  width: 334rpx;
  
  text-align: center;
  /* float: left; */
  display: inline-block;
}
.good image{
  width: 334rpx;
  height: 228rpx;
  vertical-align: bottom;
}
.good>view{
  border-left: 1rpx solid #e5e5e5;
  border-right: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}
.good>view>text:first-child{
  display: block;
  font-size: 32rpx;
  color: rgb(51,51,51);
  line-height: 32rpx;
  padding-top: 20rpx;
  margin: 0 auto 20rpx;
}
.good view view{
  display: block;
  font-size: 24rpx;
  color: rgb(102,102,102);
  line-height: 24rpx;
  height: 24rpx;
}
.good view view text:first-child{
  display: inline-block;
   font-size: 24rpx !important;
  color: rgb(255,149,27) !important;
  line-height: 24rpx;
  height: 24rpx;
  margin: 0 !Important;
}
.good view text:nth-child(3){
  display: block;
  width: 140rpx;
  height: 42rpx;
  border-radius: 21rpx;
  border: 1rpx solid rgb(43,119,239);
  font-size: 24rpx;
  color: rgb(43,119,239);
  text-align: center;
  margin: 28rpx auto;
}