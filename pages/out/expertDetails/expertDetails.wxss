/* pages/out/expertDetails/expertDetails.wxss */
@import '../../common/common.wxss';

.topline{
  width: 100%;
  height: 194rpx;
}
.topline image{
  width: 130rpx;
  height: 130rpx;
  border-radius: 65rpx;
  margin: 32rpx;
  float: left;
}
.topline >view{
  display: inline-block;
  width: 520rpx;
  float: left;
}
.toplineView>text{
  display: block;
}
.toplineView{
  margin-top: 34rpx;
}
.toplineView>text:nth-child(1){
height:48rpx;
font-size:34rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(51,51,51,1);
line-height:48rpx;
}
.toplineView>text:nth-child(2){
  margin-top: 6rpx;
height:33rpx;
font-size:24rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(51,51,51,1);
line-height:33rpx;
}
.toplineView>text:nth-child(3){
  margin-top: 6rpx;
height:33rpx;
font-size:24rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(0,0,0,0.45);
line-height:33rpx;
}
.doctorintro{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 0 12rpx;
}
.doctorintro text{
  display: inline-block;
  padding: 0 20rpx;
height:33rpx;
font-size:24rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(51,51,51,1);
line-height:33rpx;
border-right: 1rpx solid #e5e5e5;
}
.doctorintro text:last-child{
  border-right: 0;
}
.detail{
  box-sizing: border-box;
  padding: 30rpx 32rpx;
font-size:24rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(153,153,153,1);
line-height:33rpx;
}