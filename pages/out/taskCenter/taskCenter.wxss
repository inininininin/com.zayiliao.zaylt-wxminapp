.pointIntro {
  font-size: 26rpx;
  color: #fff;
  height: 58rpx;
  width: 172rpx;
  background: rgb(69, 154, 233);
  display: inline-block;
  line-height: 58rpx;
  text-align: center;
  border-top-left-radius: 29rpx;
  border-bottom-left-radius: 29rpx;
  position: absolute;
  bottom: 24rpx;
  right: 0;
}

.firstTimeIncome {
  width: 100%;
  margin-top: 24rpx;
  background: #fff;
  padding-bottom: 100rpx;
}

.clear {
  clear: both;
}

.incomeTitle {
  border-left: 9rpx solid rgb(69, 154, 233);
  height: 24rpx;
  padding-left: 12rpx;
  line-height: 24rpx;
  display: inline-block;
  margin: 34rpx 0 10rpx 32rpx;
}

.firstIncomeItem {
  display: block;
  height: 132rpx;
  border-bottom: 1rpx solid #e5e5e5;
  width: 718rpx;
  margin-left: 32rpx;
}

.firstIncomeItem>view {
  display: inline-block;
  padding-top: 30rpx;
}

.firstIncomeItem>view view:first-child {
  font-size: 32rpx;
  color: rgb(51, 51, 51);
  line-height: 32rpx;
  /* padding-top: 30rpx; *//* float: left; */
  margin: 0 0 16rpx;
}

.firstIncomeItem>view view:first-child text {
  color: rgb(255, 26, 46);
  margin-left: 36rpx;
  font-size: 26rpx;
}

.firstIncomeItem>view view:nth-child(2) {
  font-size: 24rpx;
  color: rgb(102, 102, 102);
  /* float: left; */
}

.firstIncomeItem .finish {
  float: right;
  display: inline-block;
  width: 160rpx;
  height: 60rpx;
  margin-right: 32rpx;
  border-radius: 30rpx;
  border: none;
  background: rgb(229, 229, 229);
  color: rgb(102, 102, 102);
  text-align: center;
  line-height: 60rpx;
  margin-top: 36rpx;
  font-size: 26rpx;
}

.firstIncomeItem .nofinish {
  float: right;
  display: inline-block;
  width: 160rpx;
  height: 60rpx;
  margin-right: 32rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgb(226, 64, 63);
  color: rgb(226, 64, 63);
  text-align: center;
  line-height: 60rpx;
  margin-top: 36rpx;
  font-size: 26rpx;
}

.incomeintro {
  margin-left: 0 !Important;
