/* pages/out/expertIntroduction/expertIntroduction.wxss */
@import '../../common/common.wxss';

page {
  background: #f2f2f2;
}

.docBox {
  float: left;
  min-height: 218rpx;
  height: auto;
  width: 100%;
  margin-top: 24rpx;
  background: #fff;
  position: relative;
}

.docBox .avator {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin: 44rpx 30rpx 22rpx 32rpx;
  float: left;
}

.docBox>view {
  float: left;
  width: 456rpx;
}

.docBox>view .name {
  display: inline-block;
  height: 48rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
  margin-top: 44rpx;
}

.docBox>view>view {
  /* width:240px; */
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 33rpx;
  /* overflow-y: hidden; */
     display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.docBox>view>view text:first-child {
  padding-left: 0;
}

.docBox>view>view text {
  border-right: 1rpx solid #e5e5e5;
  padding: 0 22rpx;
}

.docBox>view>view text:last-child {
  padding-right: 0;
  border-right: 0;
}

.docBox>view .intro {
  display: inline-block;
  width: 456rpx;
  
  height: auto; 

  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  padding-bottom: 20rpx; 
}

.line2 {
  line-height: 33rpx;
   display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  padding-bottom: 0 !important;
  height: 66rpx !important;
}

.docBox .down {
  width: 22rpx;
  height: 12rpx;
  /* position: absolute;
  bottom: 44rpx;
  right: 32rpx; */
  float: left;
}

.docBox .look{
  display: inline-block;
  padding: 40rpx 52rpx 64rpx 20rpx;
  width: 30rpx !important;
  height: 15rpx;
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
  /* background: #000; */
}