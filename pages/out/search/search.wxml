<!--pages/out/search/search.wxml-->
<view class="container" style="padding-top:{{statusBarHeight+titleBarHeight}}px">
  <view class="header">
    <view class="status-bar" style="height:{{statusBarHeight}}px"></view>
    <view class="title-bar" style="height:{{titleBarHeight}}px">
      <view class='search'>
       <view bindtap='backHistory' class='backHis'>
      <image  mode="aspectFill"  class='back' style='display:inline-block;left:42rpx;' src='../../img/backArrow.png'></image>
      </view>
        <image  mode="aspectFill"  class='searchIcon' style='display:inline-block;top:{{15+statusBarHeight}}px;left:112rpx;' src='../../img/sousuo@2x.png'></image>
        <input bindconfirm='input' confirm-type="search" focus='false' placeholder-style='color:#999' placeholder='输入关键字'></input>
      </view>
    </view>
  </view>
</view>

<view style='width:100%;height:100%'>
<view class='indexbox' wx:for='{{list}}'>
      <navigator url='../seeAdoctor/seeAdoctor?id={{item.itemId}}'>
        <view>
          <view>
            <text>{{item.realname}}</text>
            <view class='viewRt' wx:if='{{item.status==1}}'>
              <image  mode="aspectFill"  src='../img/weijiuzhen@2x.png'></image>
              <text>未就诊</text>
            </view>
            <view class='viewRt' wx:if='{{item.status==4}}'>
              <image  mode="aspectFill"  src='../img/yijiuzhen@2x.png'></image>
              <text>已就诊</text>
            </view>
          </view>
          <view>创建时间：{{item.pushTime}}</view>
        </view>
      </navigator>
    </view>
</view>
  