<view class="container" style="padding-top:{{statusBarHeight+titleBarHeight}}px">
  <view class="header">
    <view class="status-bar" style="height:{{statusBarHeight}}px"></view>
    <view class="title-bar" style="height:{{titleBarHeight}}px">
      <view class='search'>
        <image  mode="aspectFill"  bindtap='backHistory' style='display:inline-block;top:{{15+statusBarHeight}}px;left:62rpx;' src='../../img/sousuo@2x.png'></image>
        <input bindconfirm='input' confirm-type="search" placeholder-style='color:#999' placeholder='输入文章关键字'></input>
      </view>
    </view>
  </view>
</view>
<view class='site1' wx:if='{{show==2}}'>
  <view>
    <text class='title'>共享医连体</text>
    <view class='hosList'>
      <navigator url='../hospitalImage/hospitalImage'>
        <view>
          <image  mode="aspectFill"  src='../../img/yiyuanxingxiang@2x.png'></image>
          <text>医院形象</text>
        </view>
      </navigator>
      <navigator url='../highQualityCase/highQualityCase'>
        <view>
          <image  mode="aspectFill"  src='../../img/youzhianli@2x.png'></image>
          <text>优质案例</text>
        </view>
      </navigator>
      <navigator url='../expertIntroduction/expertIntroduction'>
        <view>
          <image  mode="aspectFill"  src='../../img/zhuanjia@2x.png'></image>
          <text>专家介绍</text>
        </view>
      </navigator>
      <navigator url='../eventAnnouncement/eventAnnouncement'>
        <view>
          <image  mode="aspectFill"  src='../../img/huodongfabu@2x.png'></image>
          <text>活动列表</text>
        </view>
      </navigator>
    </view>
  </view>

  <text class='title'>文章分享</text>
  <view class='articleList' wx:for='{{schemeList}}'>
    <navigator url='../articleDetail/articleDetail?id={{item.itemId}}&contentBtId={{item.contentBtId}}'>
      <view>
        <view>
          <text class='articleTitle'>{{item.title}}</text>
          <view class='time'>
            <image  mode="aspectFill"  src='../../img/time@2x.png'></image>
            <text>{{item.addTime}}</text>
          </view>
        </view>
        <view class='image' style='background:url({{item.cover}}) no-repeat;background-size:cover;background-position: center;'>

        </view>
        <!-- <image  mode="aspectFill"  src='{{item.cover}}'></image> -->
      </view>
    </navigator>
  </view>
</view>
<view class='site2'wx:if='{{show==1}}'>
  <view class='articleList' wx:for='{{schemeList}}'>
    <navigator url='../articleDetail/articleDetail?id={{item.itemId}}&contentBtId={{item.contentBtId}}'>
      <view>
        <view>
          <text class='articleTitle'>{{item.title}}</text>
          <view class='time'>
            <image  mode="aspectFill"  src='../../img/time@2x.png'></image>
            <text>{{item.addTime}}</text>
          </view>
        </view>
        <view class='image' style='background:url({{item.cover}}) no-repeat;background-size:cover;background-position: center;'>

        </view>
        <!-- <image  mode="aspectFill"  src='{{item.cover}}'></image> -->
      </view>
    </navigator>
  </view>
</view>