/* pages/common/common.wxss */
@import '../../../all/all.wxss';
page {
  height: 100%;
}
.container {
  box-sizing: border-box;
  /* height: 100%; */
  background: #fff;
}
.header {
  position: fixed;
  top: 0;
  width: 100%;
  background: #fff;
}
.status-bar {
  /* background: rgba(255, 0, 0, 0.1); */
}
.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
/* .header image {
  position: absolute;
  width: 24rpx;
  height: 40rpx;
} */
.refuse{
   position: absolute;
  width: 100rpx;
  height: 40rpx;
  left: 0;
  font-size: 28rpx;
}
.title-bar view{
  height: 100%;
  width: 100%;
  text-align: center;
  display: flex;
   /* justify-content: space-between; */
    align-items: center;
}
.title-bar view text:last-child{
  display: inline-block;
  text-align: center;
  width: 100%;
  margin: 0 !important;
}
.titleText{
  font-size: 36rpx;
}


/* 下拉框 */


.selectView{
  width: 702rpx;
  margin: 24rpx 24rpx 0 24rpx;
  border: 1rpx solid #e5e5e5;
  height: 90rpx;
}
.selectView>view{
  display: inline-block;
}
.selectView>view:first-child{
  width: 250rpx;
  font-size: 30rpx;
  color: rgb(51,51,51);
  padding-left: 30rpx;
  line-height: 90rpx;
}
.selectView>view:last-child{
  width: 450rpx;
}

picker{
  float: right;
