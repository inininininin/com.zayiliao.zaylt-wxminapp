/* pages/common/common.wxss */
page {
  height: 100%;
  background: #f2f2f2;
}
.container {
  box-sizing: border-box;
  /* height: 100%; */
  background: rgb(43,119,239) !important;
}
.header {
  position: fixed;
  top: 0;
  width: 100%;
  background: rgb(43,119,239) !important;
  color: #fff;
}
.status-bar {
  /* background: rgba(255, 0, 0, 0.1); */
}
.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header image {
  /* float: left; */
  position: absolute;
  width: 24rpx;
  height: 40rpx;
}
.title-bar view{
  height: 100%;
  width: 100%;
  text-align: center;
  display: flex;
   /* justify-content: space-between; */
    align-items: center;
}
.title-bar view text{
  display: inline-block;text-align: center;
  width: 100%;
  margin: 0 !important;
}
.save{
  width: 130rpx !important;
  height: 88rpx !important;
  position: absolute;
  line-height: 88rpx;
  font-size: 32rpx;
}
.save image{
  margin-top: 24rpx;
}
.titleText{
  font-size: 36rpx;
}
.required{
  width: 686rpx;
  margin: 44rpx auto;
}
.required image{
  width: 34rpx;
  height: 36rpx;
  margin: 0 10rpx 0 0;
   float: left;
}
.required text{
  color: rgb(255,149,27);
  font-size: 30rpx;
  display: inline-block;
  float: left;
}
.required>view:first-child{
  height: 40rpx;
}
.required>.input{
  width: 100%;
  height: 90rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 4rpx;
  margin-top: 24rpx;
  line-height: 90rpx;
}
.input text{
  color: rgb(51,51,51);
  margin-left: 32rpx;
}
.input input{
  height: 90rpx;
  line-height: 90rpx;
   margin-right: 32rpx;
   width: 400rpx;
   float: right;
   text-align: right;
}
.input .inputPla{
  text-align: right;
  line-height: 90rpx;
  height: 90rpx;
  float: right;
 
  font-size: 30rpx;
  color: rgb(153,153,153)
}
.selectIntro{
  margin: 44rpx 0 28rpx;
  height: 38rpx;
}