/* pages/common/common.wxss */
page {
  height: 100%;
  background: #f2f2f2;
}
.container {
  box-sizing: border-box;
  /* height: 100%; */
  background: rgb(255,149,27);
}
.header {
  position: fixed;
  top: 0;
  width: 100%;
  color: #fff;
  /* background: #fff; */
  background: rgb(255,149,27);
}
.status-bar {
  /* background: rgba(255, 0, 0, 0.1); */
}
.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header image {
  /* float: left; */
  position: absolute;
  width: 24rpx;
  height: 40rpx;
}
.title-bar view{
  height: 100%;
  width: 100%;
  text-align: center;
  display: flex;
   /* justify-content: space-between; */
    align-items: center;
}
.title-bar view text{
  display: inline-block;text-align: center;
  width: 100%;
  margin: 0 !important;
}
.titleText{
  font-size: 36rpx;
}
.box{
  width: 100%;
  height: auto;
  background: #fff;
  margin-top: 24rpx;
}
.box>view{
  height: 90rpx;
  width: 686rpx;
  margin-left: 32rpx;
  border-bottom: 1rpx solid #e5e5e5;
  line-height: 90rpx;
  font-size: 30rpx;
}
.box>view text:first-child{
  color: rgb(51,51,51);
  float: left;
}
.box>view text:last-child{
  float: right;
  color: rgb(102,102,102);
  width:480rpx;
  text-align: right;
  
 display: -webkit-box;
