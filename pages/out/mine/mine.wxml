<view class="container" style="padding-top:{{statusBarHeight+titleBarHeight}}px">
  <view class="header">
    <view class="status-bar" style="height:{{statusBarHeight}}px"></view>
    <view class="title-bar" style="height:{{titleBarHeight}}px">
      <view>
        <image  mode="aspectFill"  bindtap='userIndex' style='margin-left:30rpx;' src='../../img/set_up@2x.png'></image>
      </view>
    </view>
  </view>
</view>

<view class='ownDetail'>
  <view class='avaterBox'>
    <image  mode="aspectFill" bindtap="lookcover"  src='{{srcCover}}'></image>
    <!-- <image  mode="aspectFill"  wx:if="{{src==''}}" src="{{src}}" bindtap='bindChooiceProduct' class='avater' src='../../img/logo@2x.png'></image> -->
    <text class='yirenzheng' wx:if='{{display==1}}'>已认证</text>
    <text class='weirenzheng' wx:if='{{display==0}}'>未认证</text>
    <text class='weirenzheng' wx:if='{{display==2}}'>未通过</text>
  </view>

  <view class='title'>
    <view>
      <text>{{name}}</text>
      <text>账号：{{tel}}</text>
      <text>医院：{{hosName}}</text>
    </view>
  </view>

  <view class='yyzz'  bindtap='yyzz'>
    <image  mode="aspectFill"  src='../../img/ChevronCopy2@2x.png'></image>
    <text>营业执照</text>
  </view>
</view>


<view class='list'>
	<!-- <navigator bindtap="bindWxmApp" wx:if='{{wxOpenId}}'>
		<view>
			<text>绑定微信</text>
			<image mode="aspectFill" src='../img/ChevronCopy2@2x.png'></image>
		</view>
	</navigator> -->
  <navigator url='../taskCenter/taskCenter'>
    <view>
      <text>任务中心</text>
      <image  mode="aspectFill"  src='../../img/ChevronCopy2@2x.png'></image>
    </view>
  </navigator>
  <navigator url='../pointsExchange/pointsExchange'>
    <view>
      <text>积分兑换</text>
      <image  mode="aspectFill"  src='../../img/ChevronCopy2@2x.png'></image>
    </view>
  </navigator>
  <navigator url='../../ZJCQxshop/ZJCQxshop'>
    <view>
      <text>集采</text>
      <image  mode="aspectFill"  src='../../img/ChevronCopy2@2x.png'></image>
    </view>
  </navigator>
  <navigator url='../../ZJCMyorder/ZJCMyorder'>
    <view>
      <text>集采订单</text>
      <image  mode="aspectFill"  src='../../img/ChevronCopy2@2x.png'></image>
    </view>
  </navigator>
  <navigator url='../news/news'>
    <view>
      <text>消息</text>
      <image  mode="aspectFill"  src='../../img/ChevronCopy2@2x.png'></image>
    </view>
  </navigator>

  <navigator>
    <view bindtap="loginout">
      <text>退出登录</text>
      <image  mode="aspectFill"  src='../../img/ChevronCopy2@2x.png'></image>
    </view>
  </navigator>
</view>