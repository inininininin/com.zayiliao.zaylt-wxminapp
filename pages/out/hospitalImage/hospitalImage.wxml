<view style="width:100%;height:500rpx;background:#fff;position:fixed;top:0;left:0">
  <image src="{{detail.cover}}" mode="aspectFill" style="width:100%;height:500rpx;"></image>
</view>
<view class="navbar" style="position:fixed;top:500rpx;">
	<view wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap">{{item}}</view>

</view>

<view class='required' hidden="{{currentTab==1}}" style="margin-top:540rpx">
	<text class='basicInformation'>基本信息</text>
	<view class='basicLine'>
		<text>医院名称</text><text>{{detail.name||''}}</text>
	</view>
	<view class='basicLine'>
		<text>联系方式</text><text bindtap='phone'>{{detail.tel||''}}</text>
	</view>
	<view class='basicLine disLineNone'>
		<text>地址</text><text>{{detail.address||''}}</text>
	</view>
	<text class='basicInformation·'>医院简介</text>
	<view class='hosIntro'>
		{{detail.intro||''}}
	</view>

</view>
<view class='required specialDepartment' hidden="{{currentTab==0}}" style="margin-top:540rpx">
	<view wx:for='{{list}}' bindtap="specialOffice" data-id='{{item.itemId}}'>
		<image mode="aspectFill" src='{{item.cover}}'></image>
		<text>{{item.name}}</text>
	</view>
</view>