.container {
  box-sizing: border-box;
  /* height: 100%; */
  background: #fff;
}
.indexTopBg{
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 526rpx;
  /* background: url('https://zaylt.njshangka.com/ylt/resource/img/BJ-blue@2x.png'); */
  background-size: 100% 100%;
  background: #fff;
}
.header {
  position: fixed;
  top: 0;
  width: 100%;
  color: #fff;
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
  background: #fff;
}
.status-bar {
  /* background: rgba(255, 0, 0, 0.1); */
}
.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header image {
   position: absolute;
  width: 24rpx;
  height: 40rpx;
  padding: 24rpx 30rpx;
}
.title-bar view{
  height: 100%;
  width: 100%;
  text-align: center;
  display: flex;
   /* justify-content: space-between; */
    align-items: center;
}
.title-bar view text{
  display: inline-block;text-align: center;
  position: absolute;
  width: 28rpx;
  height: 28rpx;
  color: #fff;
  font-size: 22rpx;
  line-height: 28rpx;
  text-align: center;
  top: 10rpx;
  left: 50rpx;
  background: #FF951B;
  border-radius: 50%;
}

.navbar{
  width: 100%;
  /* height: 80rpx; */
  height: 40px;
  flex: none;
  display: flex;
  position: absolute;
  background: #fff;
  /* margin-top: -80rpx; */
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;

}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  color: rgb(102,102,102);
  font-size: 32rpx;
  font-family: PingFamhSc-Regular;
}
.navbar .item.active{
  color: rgb(43,119,239);
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  /* bottom: 0; */
  top: 80rpx;
  left: 147.5rpx;
  right: 147.5rpx;
  width: 80rpx;
  height: 6rpx;
  border-radius: 6rpx;
 
  background: rgb(43,119,239);
}
.clear{
  clear: both;
}
.lf{
  float: left;
}
.rt{
  float: right;
}
page {
  width: 100%;
  background: rgb(245,245,245);
  /* padding-bottom: 120rpx !Important; */
}
.required{
  min-height: 810rpx;
  width: 100%;
  background: #fff;
  padding-bottom: 30rpx;
}
.basicInformation{
  width: 100%;
  display: inline-block;
  text-align: center;
  font-size: 26rpx;
  color: rgb(153,153,153);
  margin: 56rpx auto 68rpx;
}
.hosIntro{
  width: 646rpx;
  padding: 20rpx;
  margin-left: 32rpx;
  border: 1rpx dotted #e5e5e5;
  border-radius: 14rpx;
  font-size: 24rpx;
  color: rgb(51,51,51)
}
.basicLine{
  width: 686rpx;
  height: 94rpx;
  line-height: 94rpx;
  margin: 0 32rpx;
  border-bottom: 1rpx solid #e5e5e5;
  font-size: 30rpx;
}
.basicLine text:first-child{
  float: left;
