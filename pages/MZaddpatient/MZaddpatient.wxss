/* pages/MZeditHospitalInfo/MZeditHospitalInfo.wxss */
@import '../common/common.wxss';
.lf {
  float: left;
}

.rt {
  float: right;
}

.hospitalName {
  margin: 60rpx auto 0 30rpx;
  padding-bottom: 20rpx;
  font-size: 26rpx;
  color: #333;
  border-bottom: 1rpx solid #e5e5e5;
}

.hospitalNameWrt {
  margin: 10rpx 30rpx 30rpx 30rpx;
  font-size: 28rpx;
  color: #000;
}

.hospitalIntro {
  font-size: 26rpx;
  color: #000;
  margin-left: 30rpx;
  display: inline-block;
  width: 720rpx;
  border-bottom: 1rpx solid #e5e5e5;
  padding-bottom: 20rpx;
}

.btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  border-top: 1rpx solid #e5e5e5;
}

.makesure {
  margin: 15rpx 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  background: #32afff;
  border: 0;
}
