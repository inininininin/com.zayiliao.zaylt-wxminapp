/* pages/framework/framework.wxss */
page{
  background: #f2f2f2;
}
.containers {
  box-sizing: border-box;
  /* height: 100%; */
  background: #fff;
  position: relative;
}

.header {
  position: fixed;
  top: 0;
  width: 100%;
  /* color: #333; *//* background: #fff; */
  background: #fff;
  z-index: 888;
}

.status-bar {
  /* background: rgba(255, 0, 0, 0.1); */
}

.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header .image {
  /* float: left; */
  position: absolute;
  width: 24rpx;
  height: 40rpx;
  z-index: 999;
}

.title-bar view {
  height: 100%;
  width: 100%;
  text-align: center;
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
}

.title-bar view .text {
  display: inline-block;
  text-align: center;
  width: 100%;
  margin: 0 !important;
  position: absolute;
  left: 0;
}

.save>image {
  width: 38rpx;
  height: 40rpx;
  padding: 20rpx;
  margin-left: 90rpx;
  z-index: 999;
}

.lineOne{
  width: 750rpx;
  /* height: 108rpx; */
  line-height: 104rpx;
  background: #fff;
  margin-top: 20rpx;
}
.lineOneNext{
  width: 100%;
  height: 108rpx;
  line-height: 108rpx;
  background: #fff;
}
.lineOneNext>text{
  font-size: 34rpx;
  color: rgb(51,51,51);
  float: left;
  /* margin-left:32rpx;  */
}
.lineOneNext view{
  float: right;
  margin-right:32rpx;
  font-size: 34rpx;
  color: rgb(51,51,51);
}
.lineOneNext view text{
  color: rgb(43,119,239);
}
.lineOneNext image{
  width: 34rpx;
  height: 34rpx;
  float: left;
  margin: 37rpx 11rpx 36rpx 33rpx;
}
.lineTwo{
  width: 750rpx;
  /* height: 104rpx; */
  background: #fff;
  font-size: 34rpx;
  color: rgb(43,119,239);
  border-top: 1rpx solid #e5e5e5;
}
.lineTwo>view{
  width: 718rpx;
  margin-left: 32rpx;
  border-bottom: 1rpx solid #e5e5e5;
  line-height: 103rpx;
  height: 103rpx;
}
.lineTwo>view .finish{
  display: inline-block;
  width: 114rpx;
  height: 40rpx;
  border-radius: 4rpx;
  background: rgb(255,237,232);
  color: rgb(237,85,40);
  font-size: 24rpx;
  line-height: 40rpx;
  float: right;
  margin: 31.5rpx 20rpx;
  text-align: center;
}
.lineTwo>view image{
  width: 16rpx;
  height: 28rpx;
  margin: 37.5rpx 32rpx 37.5rpx 10rpx;
  float:right;
}
.lineTwo>view:last-child{
  border-bottom: none;
}