/* pages/common/common.wxss */

page {
  height: 100%;
  background: #fff;
}

.container {
  box-sizing: border-box;
  /* height: 100%; */
  background: #fff;
}

.header {
  position: fixed;
  top: 0;
  width: 100%;
  /* background: #fff; */
  z-index: 999;
}

.status-bar {
  /* background: rgba(255, 0, 0, 0.1); */
}

.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.indexTopBg {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 392rpx;
  background: #fff;
  /* background: url('https://zaylt.njshangka.com/resource/img/bj1.png'); */
  background-size: 100% 100%;
}

.header .image {
  /* float: left; */
  position: absolute;
  width: 24rpx;
  height: 40rpx;
}

.title-bar view {
  height: 100%;
  width: 100%;
  text-align: center;
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
}

.title-bar view text {
  display: inline-block;
  text-align: center;
  width: 100%;
  margin: 0 !important;
}

.titleText {
  font-size: 36rpx;
}

.topImg {
  width: 370rpx;
  height: 260rpx;
  margin: 70rpx 190rpx 0;
  position: absolute;
  /* z-index: 999; */
}


.pointIntro {
  font-size: 26rpx;
  color: #fff;
  height: 58rpx;
  width: 172rpx;
  background: rgb(69, 154, 233);
  display: inline-block;
  line-height: 58rpx;
  text-align: center;
  border-top-left-radius: 29rpx;
  border-bottom-left-radius: 29rpx;
  position: absolute;
  bottom: 24rpx;
  right: 0;
}
.incomeTitle {
  border-left: 9rpx solid rgb(69, 154, 233);
  height: 24rpx;
  padding-left: 12rpx;
  line-height: 24rpx;
  display: inline-block;
  margin: 34rpx 0 34rpx 32rpx;
}
.firstTimeIncome{
  background: #fff;
}
.firstTimeIncome>view{
  height: 98rpx;
  line-height: 98rpx;
  font-size: 34rpx;
  color: #000;
  width: 718rpx;
  margin-left: 32rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.firstTimeIncome>view .sel{
  width: 36rpx;
  height: 36rpx;
  float: left;
  padding: 31rpx 30rpx 31rpx 0;
  z-index: 999;
}

.firstTimeIncome>view .right{
  width: 13rpx;
  height: 24rpx;
  float: right;
  margin: 37rpx 32rpx;
}

.editPoint{
  width: 100%;
}
.editPoint>view{
  width: 686rpx;
  height: 90rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 5rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  margin: 24rpx 32rpx 0;
}
.editPoint>view>text:nth-child(1){
  margin-left: 30rpx;
  color: rgb(51,51,51);
}
.editPoint>view>text:nth-child(2){
   margin-right: 30rpx;
   float: right;
  color: rgb(102,102,102);
}
.editPoint>view:nth-child(2)>input{
  width: 500rpx;
  float: right;
  outline: none;
  height: 100%;
  color: rgb(43,119,239);
  text-align: right;
  margin-right: 30rpx;
}
.editPoint>view:nth-child(3)>input,.editPoint>view:nth-child(4)>input{
  width: 500rpx;
  float: right;
  outline: none;
  height: 100%;
  color: rgb(43,119,239);
  text-align: right;
  margin-right: 15rpx;
}
.editPoint>view:nth-child(3)>.text,.editPoint>view:nth-child(4)>.text{
  float: right;
  margin-right: 30rpx;
}
.inputPla{
  color: rgb(43,119,239);
}
.saveBack{
   width: 24rpx;
  height: 40rpx;
  padding: 20rpx;
  z-index: 1100;
}