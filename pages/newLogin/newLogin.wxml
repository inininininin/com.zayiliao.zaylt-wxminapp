<view wx:if='{{loginChange}}'>
	<!-- <view class="top1">
    <image  mode="aspectFill"  src="https://zaylt.njshangka.com/resource/img/name@2x.png"></image>
    <view class="navbar">
      <view wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap">{{item}} </view>
    </view>
  </view> -->
	<view class="bgView">
		<!-- <text>— 医院端 —</text> -->
	</view>
	<view>
		<view class="lines">
			<image mode="aspectFill" src="../img/iphone@2x.png"></image>
			<input type="text" value='{{key}}' bindinput="loginPhone" placeholder-class="placeholder" placeholder="输入帐号"></input>
			<image mode="aspectFill" src="../img/delete.png" wx:if="{{key}}" bindtap="eliminate"></image>
		</view>
		<view class="lines_b">
			<image mode="aspectFill" src="../img/mima@2x.png"></image>
			<input bindinput='loginPassward' value='{{password}}' password='{{isShowPassword}}' placeholder-class="placeholder" placeholder="输入密码"></input>
			<image mode="aspectFill" class="delete" src="../img/delete.png" wx:if="{{password}}" bindtap="eliminate1"></image>
			<image mode="aspectFill" class="eye" bindtap="toggleShowPassword" src="../img/close-eye@2x.png" wx:if='{{isShowPassword}}'></image>
			<image mode="aspectFill" class="eye" bindtap="toggleShowPassword" src="../img/open-eye@2x.png" wx:if='{{!isShowPassword}}'></image>
		</view>
		<view class="registerXy">
			<image mode="aspectFill" bindtap="selectIcon" wx:if="{{selectAgree}}" src="../img/select1@2x.png"></image>
			<image mode="aspectFill" bindtap="selectIcon" wx:if="{{!selectAgree}}" src="../img/Not-selected1@2x.png"></image>
			<view>我已经阅读并同意
				<text style="color:#5ab5fc;" bindtap="loginXy">《用户协议与隐私政策》</text>
			</view>
		</view>
	</view>
	<!-- bindtap="loginBtn"  -->
	<view class="loginBtn" bindtap="submitGetPerson">
		登录
	</view>
	<view>
		<view class="forgotpwd" bindtap="forgotpwd">
			<text>忘记密码</text>
			<image mode="aspectFill" src="../img/wangji@2x.png"></image>
		</view>
		<view class="selectEnter">
			<!-- <button open-type="getUserInfo" bindgetuserinfo="getPerson" class="wxLogin">微信登录</button> -->

			<!-- <text>微信登录</text> -->
		</view>
	</view>
	<view class="popWindow" wx:if='{{showPhone}}'>
		<view class="getPhoneBox">
			<view class="getPhoneBoxTitle">
				提示
			</view>
			<view class="getPhoneBoxCenter">
				获取手机号权限
			</view>
			<view class="getPhoneBoxButton">
				<button bindtap="showPhoneFn">取消</button>
				<button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" class="getPhoneClass">确定</button>
			</view>
		</view>
	</view>


	<view bindlongtap="bindlongtap" class="bindlongtap"></view>
	<!-- 输入验证码 -->
	<view class="caozuoBox" wx:if='{{bindlongtap1}}' bindtap="caozuoBox">
		<view class="boxIndex" catchtap="eve">
			<view class="title">请输入开发人员操作验证码</view>
			<input class="input" bindinput="inputYzm"></input>
			<view class="makesureThis" catchtap="makesureThis">确定</view>
		</view>
	</view>
  <view class="caozuoBox" wx:if='{{bindlongtap2}}' bindtap="caozuoBox">
		<view class="boxIndex" catchtap="eve">
			<view class="title">请输入测试域名</view>
			<input class="input" bindinput="inputYm"></input>
			<view class="makesureThis" catchtap="makesureThisYm">确定</view>
		</view>
	</view>
</view>

<view wx:if='{{!loginChange}}'>
	<view class="top2">
		<image mode="aspectFill" bindtap="forgotpwd" src="../img/black-backnew.png"></image>
		<text>修改密码</text>
		<text>修改后的新密码将替换原密码</text>
	</view>
	<view class="lines">
		<image mode="aspectFill" src="../img/iphone@2x.png"></image>
		<input type="number" value='{{key}}' bindinput="loginPhone" placeholder-class="placeholder" placeholder="输入手机号"></input>
		<image mode="aspectFill" src="../img/delete.png" wx:if="{{key}}" bindtap="eliminate"></image>
	</view>
	<view class="lines_yzm">
		<image mode="aspectFill" src="../img/yanzhengma@2x.png"></image>
		<input type="number" value='{{code}}' bindinput="loginCode" placeholder-class="placeholder" placeholder="输入验证码"></input>
		<!-- <image  mode="aspectFill"  src="../img/delete.png" wx:if="{{key}}" bindtap="eliminate"></image> -->
		<text bindtap='smsvcodeGet'>{{times}}</text>
	</view>
	<view class="lines_b">
		<image mode="aspectFill" src="../img/mima@2x.png"></image>
		<input bindinput='loginPassward' value='{{password}}' password='{{isShowPassword}}' placeholder-class="placeholder" placeholder="输入新密码"></input>
		<image mode="aspectFill" class="delete" src="../img/delete.png" wx:if="{{password}}" bindtap="eliminate1"></image>
		<image mode="aspectFill" class="eye" bindtap="toggleShowPassword" src="../img/close-eye@2x.png" wx:if='{{isShowPassword}}'></image>
		<image mode="aspectFill" class="eye" bindtap="toggleShowPassword" src="../img/open-eye@2x.png" wx:if='{{!isShowPassword}}'></image>
	</view>
	<!-- <button open-type="getUserInfo" bindgetuserinfo="submitGetPerson" class="wxLogin wxLoginColor">
      登录
    </button> -->
	<view bindtap="makeSure" class="loginBtn">确认</view>
</view>