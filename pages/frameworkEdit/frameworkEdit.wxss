/* pages/frameworkEdit/frameworkEdit.wxss */
page{
  background: #fff;
}
.containers {
  box-sizing: border-box;
  /* height: 100%; */
  background: #fff;
  position: relative;
}

.header {
  position: fixed;
  top: 0;
  width: 100%;
  /* color: #333; *//* background: #fff; */
  background: #fff;
  z-index: 888;
  border-bottom: 1rpx solid #e5e5e5;
}

.status-bar {
  /* background: rgba(255, 0, 0, 0.1); */
}

.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title-bar>view{
  width: 100%;
}
.header .image {
  /* float: left; */
   position: absolute;
  width: 24rpx;
  height: 40rpx;
  z-index: 999;
}
.header text{
  width: 112rpx;
  height: 60rpx;
  border-radius: 6rpx;
  background: rgb(16,142,233);
  line-height: 60rpx;
  float: left;
  margin-left: 120rpx;
  text-align: center;
  display: inline-block;
  color: #fff;
  font-size: 26rpx;
}
textarea{
  width: 686rpx;
  /* margin:  32rpx; */
  font-size: 34rpx;
  color: rgb(51,51,51);
  /* min-height: 50rpx; */
  line-height: 50rpx;
  padding:30rpx 32rpx;
  /* height: auto; */
}
.camera{
  position: fixed;
  bottom: 40rpx;
  right: 36rpx;
  width: 88rpx;
  height: 88rpx;
  z-index: 5;
}
.video{
  position: fixed;
  width: 88rpx;
  height: 88rpx;
  bottom: 40rpx;
  right: 164rpx;
  z-index: 5;
}
.delete{
  position: fixed;
  width: 88rpx;
  height: 88rpx;
  bottom: 40rpx;
  right: 292rpx;
  z-index: 5;
}
.fileAll{
  width: 100%;
  height: auto;
  position: relative;
  margin:10rpx 0;
}
.fileAll .delThis{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 20rpx;
  right: 56rpx;
  z-index: 1;
}
.fileAll .image,.fileAll video{
   width: 678rpx;
  margin: 0 36rpx;
}