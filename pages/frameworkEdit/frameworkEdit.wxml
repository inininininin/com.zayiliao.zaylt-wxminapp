<!--pages/frameworkEdit/frameworkEdit.wxml-->
<view class="container" style="padding-top:{{statusBarHeight+titleBarHeight}}px">
  <view class="header">
    <view class="status-bar" style="height:{{statusBarHeight}}px"></view>
    <view class="title-bar" style="height:{{titleBarHeight}}px">
      <view>
        <image  mode="aspectFill"  bindtap='backHistory' class="image" style='display:inline-block;top:{{statusBarHeight}}px;left:10rpx;padding:12px 10px;'  src='../img/black-backnew.png'></image>
        <text class="text" bindtap="saveThis">{{navtitle}}</text>
      </view>
    </view>
  </view>
</view>
<image  mode="aspectFill"  class="video" bindtap="video" src="../img/camera2.png"></image>
<image  mode="aspectFill"  class="camera" bindtap="camera" src="../img/camera@2x.png"></image>
<image  mode="aspectFill"  class="delete" bindtap="backHistory" src="../img/delete@2x.png"></image>
  <textarea bindinput="bindTextAreaBlur" maxlength="-1" auto-height placeholder="请输入详情" />
<view class="imageBox">
	<view class="fileAll"  wx:for='{{picBlobShow}}' >
		<image  mode="aspectFill"  class="delThis" bindtap="delThis" data-src='{{item.src}}' src="../img/close2.png"></image>
	    <image  mode="aspectFill"  class="image" mode="aspectFit" catchtap='previewImage' data-src='{{item.src}}' src="{{item.src}}"></image>
	    <!-- <video  wx:if='{{item.type==2}}' id="myVideo" src="{{item.src}}"  controls></video> -->
	</view>
	
</view>

<view class="videoBox">
	<view class="fileAll"  wx:for='{{videoBlobShow}}' >
		<image  mode="aspectFill"  class="delThis" bindtap="delThisVideo" data-src='{{item.src}}' src="../img/close2.png"></image>
	    <!-- <image  mode="aspectFill"  class="image" wx:if='{{item.type==1}}' mode="widthFix" src="{{item.src}}"></image> -->
	    <!-- <video  mode='aspectFit' id="myVideo" class="myVideo" src="{{item.src}}"  controls></video> -->
		<video class="image" disabled data-src="{{item.src}}" catchtap="previewVideo" class="myVideo"  id="myVideo" src="{{items.src}}" controls='{{falseIs}}' showCenterPlayBtn='{{falseIs}}' show-fullscreen-btn='{{trueIs}}'></video>
		<image  mode="aspectFill"  catchtap="previewVideo"  data-src="{{item.src}}"  class="action" src="../img/action.png"></image>
		
	</view>
</view>



<view bindtap="myVideoSrcClose" class="myVideoSrcClose"  wx:if='{{myVideoSrcIs}}'>
   <video catchtap="myVideoSrc" id="myVideoAction" src="{{myVideoSrc}}" controls  ></video>
</view>