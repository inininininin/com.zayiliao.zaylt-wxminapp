page {
  height: 100%;
  background: #f2f2f2;
}
.container {
  box-sizing: border-box;
  /* height: 100%; */
  background: #f2f2f2;
}
.header {
  position: fixed;
  top: 0;
  width: 100%;
  background: #f2f2f2;
  z-index: 999
}

.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title-bar>view{
  width:520rpx;
height:66rpx;
background:rgba(255,255,255,1);
border-radius:33rpx; 
margin: 10rpx 0 10rpx 24rpx ;
}
.title-bar>view>image{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin: 18rpx 10rpx 18rpx 29rpx;
}
.title-bar>view input{
  width: 298rpx;
  height: 66rpx;
  line-height: 66rpx;
  padding: 0 10rpx;
  color: #333333;
  font-size:30rpx;
  float: left;
}
.title-bar>view text{
  display: inline-block;
  float: right;
  width: 132rpx;
  height: 30rpx;
  text-align: center;
  margin: 18rpx 0;
  border-left: 1rpx solid #e5e5e5;
  font-size:30rpx;
  color: #2B77EF;
  line-height: 30rpx;
}

.item{
  width:702rpx;
height:101rpx;
background:rgba(255,255,255,1);
border-radius:6rpx;
margin: 24rpx auto 0;
}
.item>image:nth-child(1){
  width: 36rpx;
  height: 36rpx;
  float: left;
  margin: 32rpx 20rpx 32rpx 30rpx;
}
.item>text:nth-child(2){
  font-size:30rpx;
font-family:PingFangSC-Medium,PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
line-height:101rpx;
}
.item>image:nth-child(3){
  float: right;
  width: 13rpx;
  height: 24rpx;
  margin: 37rpx 20rpx 37rpx 0;
}
.item>text:nth-child(4){
  font-size:26rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(102,102,102,1);
line-height:101rpx;
margin-right: 43rpx;
width: 180rpx;
float: right;
text-align: right;
}
