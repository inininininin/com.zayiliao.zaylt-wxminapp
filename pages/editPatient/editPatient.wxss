page {
  height: 100%;
  background: #f2f2f2;
}
.container {
  box-sizing: border-box;
  /* height: 100%; */
  background: rgb(255,149,27);
}
.header {
  position: fixed;
  top: 0;
  width: 100%;
  color: #fff;
  /* background: #fff; */
  background: rgb(255,149,27);
}
.status-bar {
  /* background: rgba(255, 0, 0, 0.1); */
}
.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header .image {
  /* float: left; */
  position: absolute;
  width: 18rpx;
  height: 30rpx;
  z-index: 999;
  padding:27rpx 25rpx;
}
.title-bar view{
  height: 100%;
  width: 100%;
  text-align: center;
  display: flex;
   /* justify-content: space-between; */
    align-items: center;
}
.title-bar view .text{
  display: inline-block;text-align: center;
  width: 100%;
  margin: 0 !important;
  position: absolute;
  left: 0;
}
.titleText{
  font-size: 36rpx;
}
.title{
  height: 85rpx;
  background: #f2f2f2;
  line-height: 85rpx;
  color: rgb(43,119,219); 
}
.title>text{
  display: block;
  height:20rpx;
  border-left: 6rpx solid rgb(43,119,219); 
  font-size: 30rpx;
  margin: 28rpx 20rpx 28rpx 30rpx;
  float: left;
}
