<view class="title">
	<text></text>
	发票照片
</view>
<view class='invoicePhoto'>
	<view bindtap="addPic">
		<image mode="aspectFill" src="../img/orange_add@2x.png"></image>
	</view>
	<view class="imageItem" wx:for='{{imglist}}'>
		<image mode="aspectFill" data-src="{{item}}" mode="aspectFill" bindtap="previewImage" src='{{item}}'></image>
		<image mode="aspectFill" class="deletThis" bindtap="deletThis" data-src='{{item}}' src="../img/deleteC.png"></image>
